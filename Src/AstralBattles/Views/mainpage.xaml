<Page x:Class="AstralBattles.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Localization="using:AstralBattles.Localizations.Cyclops.MainApplication.Localization"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Localization:ResourceWrapper x:Key="ResourceWrapper"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Astral Battles"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="20"/>
        
        <!-- Menu Content -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20">
            
            <Button x:Name="CampaignButton"
                    Content="{Binding Source={StaticResource ResourceWrapper}, Path=CommonResources.Campaign}"
                    MinWidth="200"
                    HorizontalAlignment="Center"/>
                    
            <Button x:Name="TwoPlayersButton"
                    Content="{Binding Source={StaticResource ResourceWrapper}, Path=CommonResources.TwoPlayers}"
                    MinWidth="200"
                    HorizontalAlignment="Center"/>
                    
            <Button x:Name="DeckConfigButton"
                    Content="{Binding Source={StaticResource ResourceWrapper}, Path=CommonResources.ConfigureDeck}"
                    MinWidth="200"
                    HorizontalAlignment="Center"/>
                    
            <Button x:Name="AboutButton"
                    Content="{Binding Source={StaticResource ResourceWrapper}, Path=CommonResources.About}"
                    MinWidth="200"
                    HorizontalAlignment="Center"/>
                    
        </StackPanel>
    </Grid>
</Page>