<UserControl x:Class="AstralBattles.Controls.PlayersTurnNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converters="clr-namespace:AstralBattles.Converters" xmlns:Controls="clr-namespace:AstralBattles.Controls"
    xmlns:ViewModels="clr-namespace:AstralBattles.ViewModels" mc:Ignorable="d"
    Height="480" Width="800" x:Name="thisControl" Foreground="White"
    d:DataConLabel="{d:DesignInstance IsDesignTimeCreatable=True, Type=ViewModels:DesignTimeDataContext}">
    
    <UserControl.Resources>
        <Converters:ElementsImageConverter x:Key="elementImageConverter"/>
        <Converters:CardImageConverter x:Key="cardImageConverter"/>
        <Converters:BindToElementConverter x:Key="bindToElementConverter" />
        <Converters:IsActiveToOpacityConverter x:Key="isActiveToOpacityConverter" />
        <Converters:NullToHiddenConverter x:Key="nullToHiddenConverter" />
        <Converters:TrueToVisibleConverter x:Key="trueToVisibleConverter" />
        <Converters:IsCreatureToVisible x:Key="isCreatureToVisible" />
        <Converters:FaceImageConverter x:Key="faceImageConverter" />
        <Converters:FalseToVisibleConverter x:Key="falseToVisibleConverter" />
    </UserControl.Resources>


    <Grid x:Name="LayoutRoot" Background="#99000000" DataConLabel="{Binding ElementName=thisControl}">
        <Border x:Name="border" Tap="BorderTap" CornerRadius="10" 
                Background="#595959" Width="431" Height="160" BorderBrush="#FF494949">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
            <Image Grid.Row="1"
                Margin="9,0,0,0" Height="90" Width="90" 
                   HorizontalAlignment="Left"
                   Source="{Binding Photo, Converter={StaticResource faceImageConverter}}"
                   VerticalAlignment="Top"/>
                <TextBlock Grid.Row="1" Margin="15,0,8,15"
                       LineStackingStrategy="BlockLineHeight"  
                       LineHeight="30" FontSize="20" 
                       VerticalAlignment="Center"
                       TextTrimming="WordEllipsis" 
                       TextWrapping="Wrap" Grid.Column="1" 
                       Label="{Binding MessageBody}" 
                       Foreground="White"/>
                <TextBlock Grid.ColumnSpan="2" Label="{Binding CommonResources.NextTurn, Source={StaticResource ResourceWrapper}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,-3" Foreground="#FFF3FF1D" FontSize="20"/>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-13,0,1" FontSize="20" Foreground="White"><Run FontWeight="Bold" Label="{Binding CommonResources.Tap, Source={StaticResource ResourceWrapper}}">
                		<Run.Foreground>
                			<SolidColorBrush Color="#FFF1FF00">
                				<SolidColorBrush.RelativeTransform>
                					<MatrixTransform Matrix="Identity"/>
                				</SolidColorBrush.RelativeTransform>
                				<SolidColorBrush.Transform>
                					<MatrixTransform Matrix="Identity"/>
                				</SolidColorBrush.Transform>
                			</SolidColorBrush>
                		</Run.Foreground>
                	</Run><Run Label="{Binding CommonResources.ToContinue, Source={StaticResource ResourceWrapper}}"/></TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
